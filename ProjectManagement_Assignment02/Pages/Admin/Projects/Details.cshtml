@page
@model ProjectManagement_Assignment02.Pages.Admin.Projects.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Customer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Group.Id)
        </dd>

        <dt class="col-sm-12">
            Members
        </dt>

        @foreach (var employee in Model.Project.ProjectEmployees)
        {
            <dd class="col-sm-12">
                @employee.Employee.Visa: @employee.Employee.FirstName @employee.Employee.LastName
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Project?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
