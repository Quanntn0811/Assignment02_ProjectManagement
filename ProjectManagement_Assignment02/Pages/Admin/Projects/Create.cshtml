@page
@model ProjectManagement_Assignment02.Pages.Admin.Projects.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.Number" class="control-label"></label>
                <input min="1" asp-for="CreateNewProjectRequest.Number" class="form-control" />
                <span asp-validation-for="CreateNewProjectRequest.Number" class="text-danger"></span>
                <span class="text-danger">@ViewData["NumberMessage"]</span>
            </div>
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.Name" class="control-label"></label>
                <input asp-for="CreateNewProjectRequest.Name" class="form-control" />
                <span asp-validation-for="CreateNewProjectRequest.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.Customer" class="control-label"></label>
                <input asp-for="CreateNewProjectRequest.Customer" class="form-control" />
                <span asp-validation-for="CreateNewProjectRequest.Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.GroupId" class="control-label"></label>
                <select asp-for="CreateNewProjectRequest.GroupId" class="form-control" asp-items="Model.ListGroupId"></select>
            </div>          
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.Employees" class="control-label"></label>
                @* <select multiple asp-for="CreateNewProjectRequest.Employees" asp-items="Model.listMember" class="form-control dropdown">
                </select> *@
                <select asp-for="CreateNewProjectRequest.Employees" class="form-control" asp-items="Model.listMember"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.Status" class="control-label"></label>
                <select asp-for="CreateNewProjectRequest.Status" class="form-control" asp-items="Model.Status"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.StartDate" class="control-label"></label>
                <input asp-for="CreateNewProjectRequest.StartDate" class="form-control" />
                <span asp-validation-for="CreateNewProjectRequest.StartDate" class="text-danger"></span>
                <span class="text-danger">@ViewData["Message"]</span>
            </div>
            <div class="form-group">
                <label asp-for="CreateNewProjectRequest.EndDate" class="control-label"></label>
                <input asp-for="CreateNewProjectRequest.EndDate" class="form-control" />
                <span asp-validation-for="CreateNewProjectRequest.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="pt-2">
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
