@page
@model ProjectManagement_Assignment02.Pages.Authorization.LoginModel

@{
    Layout = "";
    ViewData["Title"] = "Login";
}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/ProjectManagement_Assignment02.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/login.css" />

<div class="container">
    <main role="main" class="pb-3">
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">
                                <div class="mb-md-5 mt-md-4 pb-2">

                                    <h2 class="fw-bold mb-2 text-uppercase mt-3">Login</h2>
                                    <form method="post">
                                        <div class="form-outline form-white mb-4 text-start">
                                            <label class="form-label" asp-for="User.Email">Email</label>
                                            <input type="email" asp-for="User.Email" class="form-control form-control-lg" />
                                            <span asp-validation-for="User.Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline form-white mb-4 text-start">
                                            <label class="form-label text-start" asp-for="User.Password">Password</label>
                                            <input type="password" asp-for="User.Password" class="form-control form-control-lg" />
                                            <span asp-validation-for="User.Password" class="text-danger"></span>
                                        </div>

                                        <div>
                                            <input asp type="submit" value="Login" class="btn btn-outline-light btn-lg px-5" />
                                        </div>
                                        <div>
                                            <span class="text-danger mt-3">@ViewData["ErrorMessage"]</span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


